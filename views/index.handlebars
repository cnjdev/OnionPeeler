<!-- Top of Page -->
<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>
      <span class="glyphicon glyphicon-fire"></span>
      Onion Peeler
    </h1>    
    <h2>Scrape articles from </h2>
    <img src="/images/onion-logo.jpg" 
