<div class="container">
  <div class="row">
    {{#each articles}}    
      {{> articles/article}}
    {{/each}}
  </div>
</div>

<div id="articleModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h2 class="modal-title" id="article-title"></h2>
        <h3 class="modal-title" id="article-id"></h3>
      </div>
      <div class="modal-body">
        <div id="article-notes"></div>
        <form class="create-form">
          <div class="form-group">
            <textarea rows="4" cols="60" id="new-note" name="note"></textarea>
          </div>
          <button type="submit" class="add-note">Add Note</button>
        </form>
      </div>
    </div>
  </div>
</div>